package projetoJavaFundamentos;

import java.util.Scanner;

public class exercicio06 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner entrada = new Scanner(System.in);
		System.out.println("Digite um numero : ");
		double resposta = entrada.nextDouble();
				
		if ( resposta == 0 ) {
		System.out.println("O numero que você digitou foi 0 .");
		if ( resposta <0) {
		System.out.println("O numero que você digitou é Negativo.");
		}		
		else {
		System.out.println("O numero que você digitou é positivo.");
		

	}
		}

}
}